<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <div class="panel panel-success">
      <div class="panel-heading">
        User
      </div>

      <div class="panel-body">
        <p>
          <strong>First name:</strong>
          <%= @user.first_name %>
        </p>

        <p>
          <strong>Last name:</strong>
          <%= @user.last_name %>
        </p>

        <p>
          <strong>Email:</strong>
          <%= @user.email %>
        </p>

        <p>
          <strong>Street address:</strong>
          <%= @user.street_address %>
        </p>

        <p>
          <strong>City:</strong>
          <%= @user.city %>
        </p>

        <p>
          <strong>Province:</strong>
          <%= @user.province %>
        </p>

        <p>
          <strong>Postal code:</strong>
          <%= @user.postal_code %>
        </p>

        <p>
          <strong>Country:</strong>
          <%= @user.country %>
        </p>
      </div>

      <div class="panel-footer">
        <%= link_to 'Edit', edit_user_path(@user), class: 'btn btn-success' %>
        <%= link_to 'Back', users_path, class: 'btn btn-default' %>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="panel panel-info">
      <div class="panel-heading">
        <h3><%= @user.first_name %>'s Microposts</h3>
      </div>
      <table class="table table-hover">
        <tr>
          <th class="col-md-10">Message</th>
          <th class="col-md-2"></th>
        </tr>
        <% @user.microposts.each do |micropost| %>
        <tr>
          <td><%= micropost.message %></td>
          <td><%= link_to "Show", micropost_path(micropost), class: 'btn btn-default' %></td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>